<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C0CA3">

    <View
        android:id="@+id/viewpedido"
        android:layout_width="418dp"
        android:layout_height="90dp"
        android:background="#4CC8EF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"/>

    <TextView
        android:id="@+id/textViewpedidopendiente"
        android:layout_width="223dp"
        android:layout_height="46dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="TextView"
        android:textColor="#3A0CA3"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/viewpedido"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botonpedidoGo"
        android:layout_width="118dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:onClick="GoPedidos"
        android:text="IR"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/viewpedido"
        app:layout_constraintTop_toTopOf="@id/viewpedido" />

</androidx.constraintlayout.widget.ConstraintLayout>