<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A0CA3"
    android:backgroundTint="#3A0CA3"
    android:foregroundTint="#6C2121"
    tools:context=".VendedorPedidosEnviados">

    <TextView
        android:id="@+id/pedidosEnviados"
        android:layout_width="295dp"
        android:layout_height="47dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="56dp"
        android:fontFamily="sans-serif-light"
        android:text="Pedidos Enviados"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/viewpedidosEnviados"
        android:layout_width="410dp"
        android:layout_height="565dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/pedidosEnviados" />
</androidx.constraintlayout.widget.ConstraintLayout>