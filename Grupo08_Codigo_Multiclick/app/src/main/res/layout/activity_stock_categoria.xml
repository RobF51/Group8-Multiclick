<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A0CA3"
    tools:context=".StockCategoria">


    <TextView
        android:id="@+id/stockCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/place_holder"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textQuantityToAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/quantityToAdd"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"

        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stockCategoria" />

    <EditText
        android:id="@+id/editTextQuantityToAdd"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:background="#AEAEAE"
        android:inputType="number"
        android:text="0"
        android:textColor="#6311C1"
        android:textSize="24sp"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@id/textQuantityToAdd"
        app:layout_constraintTop_toBottomOf="@id/stockCategoria" />

    <ListView
        android:id="@+id/viewlistarticulos"
        android:layout_width="wrap_content"
        android:layout_height="583dp"

        android:layout_marginTop="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stockCategoria" />


</androidx.constraintlayout.widget.ConstraintLayout>